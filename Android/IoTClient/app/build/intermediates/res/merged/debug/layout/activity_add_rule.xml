<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.rit.csci759.mobile.AddRuleActivity"
    android:background="#000000">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/addButton"
        android:textColor="#ffffff"
        android:background="#ffa200"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Rule"
        android:id="@+id/editRuleTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IF temperature IS"
        android:id="@+id/textView2"
        android:layout_marginTop="51dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/editRuleTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/temperatureSpinner"
        android:background="#ffffff"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/editRuleTitle"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/editRuleTitle"
        android:spinnerMode="dropdown" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/editConnectorSpinner"
        android:background="#ffffff"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/editRuleTitle"
        android:layout_alignStart="@+id/editRuleTitle"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/editRuleTitle"
        android:layout_alignEnd="@+id/editRuleTitle"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ambient IS"
        android:id="@+id/textView3"
        android:layout_marginTop="33dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/editConnectorSpinner"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editAmbientSpinner"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/editConnectorSpinner"
        android:layout_toEndOf="@+id/editConnectorSpinner"
        android:layout_alignBottom="@+id/textView3"
        android:background="#ffffff"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="THEN blind IS"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blindSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/editAmbientSpinner"
        android:layout_alignStart="@+id/editAmbientSpinner"
        android:layout_alignBottom="@+id/textView4"
        android:background="#ffffff"
        android:spinnerMode="dropdown" />

</RelativeLayout>
