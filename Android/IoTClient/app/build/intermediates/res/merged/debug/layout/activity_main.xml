<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.rit.csci759.mobile.MainActivity"
    android:weightSum="1"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ROOM INFORMATION"
        android:id="@+id/roomInfoTable"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_weight="0.10"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TEMPERATURE"
        android:id="@+id/temperatureLabel"
        android:layout_weight="0.05"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/temperature"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:textColor="#f48a33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AMBIENT"
        android:id="@+id/ambientLabel"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ambient"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:textColor="#f48a33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blind Status"
        android:id="@+id/blindStatusLabel"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/blindStatus"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:textColor="#f48a33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time"
        android:id="@+id/timeLabel"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/time"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:textColor="#f48a33" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Rules"
        android:id="@+id/viewRules"
        android:background="#ffa200"
        android:textColor="#ffffff" />

</LinearLayout>
